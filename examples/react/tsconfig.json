{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "jsx": "react",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": [
      "dom",
      "es2017"
    ],
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.tsx",
    "**/*.ts"
  ]
}
